<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kelola Pupuk</title>
    <!-- Link Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container py-4">
        <h1 class="text-center mb-4">Kelola Pupuk</h1>

        <form action="/pupuk" method="POST" class="mb-4">
            <div class="row g-2">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="Nama" placeholder="Nama Pupuk" required>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" name="Jenis" placeholder="Jenis">
                </div>
                <div class="col-md-3">
                    <input type="number" class="form-control" name="Harga" placeholder="Harga">
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">Tambah</button>
                </div>
            </div>
        </form>

        <ul class="list-group">
            <% data.forEach(item=> { %>
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">
                            Nama Pupuk : <%= item.Nama %><br>
                                Jenis Pupuk: <%= item.Jenis %> <br>
                                    Harga Pupuk: <%= item.Harga %><br>

                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="/pupuk/delete/<%= item.id %>" class="btn btn-danger btn-sm">Hapus</a>
                        <form action="/pupuk/update/<%= item.id %>" method="POST" class="d-flex gap-2">
                            <input type="text" class="form-control form-control-sm" name="Nama" value="<%= item.Nama %>"
                                required>
                            <input type="text" class="form-control form-control-sm" name="Jenis"
                                value="<%= item.Jenis %>">
                            <input type="number" class="form-control form-control-sm" name="Harga"
                                value="<%= item.Harga %>">
                            <button type="submit" class="btn btn-success btn-sm">Update</button>
                        </form>
                    </div>
                </li>
                <% }) %>
        </ul>
    </div>

    <!-- Link Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>